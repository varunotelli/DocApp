<UserControl
    x:Class="DocApp.Presentation.Views.Templates.HospitalProfileLargeTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DocApp.Presentation.Views.Templates"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="using:System"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    RequestedTheme="Dark">
    <UserControl.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="ms-appx:///Assets/ProximaNova-Regular.ttf#Proxima Nova"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Image Source="ms-appx:///Assets/400_placeholder.png" Width="300" Height="300" Stretch="UniformToFill"/>
        <TextBlock Text="{x:Bind hospital.Name}" Margin="10,5" FontSize="18" FontWeight="ExtraBold"
                   Foreground="White" FontFamily="ms-appx:///Assets/ProximaNova-Extrabld.ttf#Proxima Nova"/>
        <!--<TextBlock Text="{x:Bind sys:String.Format('{0} of experience overall', doctor.Experience)}" 
                   Style="{StaticResource TextBlockStyle}"/>-->
        <TextBlock Text="{x:Bind hospital.Location}" Style="{StaticResource TextBlockStyle}" TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"/>
        <RatingControl Value="{x:Bind hospital.Rating}" HorizontalAlignment="Left" Margin="10,3"
                                       Caption="{x:Bind sys:String.Format('({0})',hospital.Number_Of_Rating)}" 
                                       IsReadOnly="True" >
            <RatingControl.Resources>
                <SolidColorBrush x:Key="RatingControlSelectedForeground" Color="Gold" />

            </RatingControl.Resources>
        </RatingControl>

    </StackPanel>
</UserControl>
